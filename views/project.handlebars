<section>
    {{!-- logged in user's projects --}}
    {{#each projects}}
        {{> projectCard project=this}}
    {{/each}}

    <form >
        <label for="name">Project Name</label><br>
        <input id="new-project-name" type="text">
        <label for="description">Project description</label>
        <textarea id="new-project-description" name="description" id="" cols="5" rows="20"></textarea><br>
        <label for="needed_funding">Funding needed</label>
        <input id="new-project-funding" type="number">
    </form>
</section>

